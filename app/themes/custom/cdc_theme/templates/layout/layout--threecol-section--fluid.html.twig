{#
/**
 * @file
 * Default theme implementation for a three-column layout.
 *
 * Available variables:
 * - content: The content for this layout.
 * - attributes: HTML attributes for the layout <div>.
 *
 * @ingroup themeable
 */
#}
{% if '25-50-25' in attributes|render|render %}
  {% set col1class = "col-md-3" %}
  {% set col2class = "col-md-6" %}
  {% set col3class = "col-md-3" %}
{% elseif '33-34-33' in attributes|render|render %}
  {% set col1class = "col-md-4" %}
  {% set col2class = "col-md-4" %}
  {% set col3class = "col-md-4" %}
{% elseif '25-25-50' in attributes|render|render %}
  {% set col1class = "col-md-3" %}
  {% set col2class = "col-md-3" %}
  {% set col3class = "col-md-6" %}
{% elseif  '50-25-25' in attributes|render|render %}
  {% set col1class = "col-md-6" %}
  {% set col2class = "col-md-3" %}
  {% set col3class = "col-md-3" %}
{% endif %}

{%
set classes = [
'layout',
'row',
'container-fluid'
]
%}

{% if content %}
  <div{{ attributes.addClass(classes) }}>

    {% if content.first %}
      <div {{ region_attributes.first.addClass('layout__region', 'layout__region--first', col1class) }}>
        {{ content.first }}
      </div>
    {% endif %}

    {% if content.second %}
      <div {{ region_attributes.second.addClass('layout__region', 'layout__region--second', col2class) }}>
        {{ content.second }}
      </div>
    {% endif %}

    {% if content.third %}
      <div {{ region_attributes.third.addClass('layout__region', 'layout__region--third', col3class) }}>
        {{ content.third }}
      </div>
    {% endif %}

  </div>
{% endif %}
