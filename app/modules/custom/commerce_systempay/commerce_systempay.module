use Drupal\commerce_systempay\Tools;

function commerce_systempay_commerce_payment_gateway_info_alter(&$definitions)
{
    if (! Tools::$pluginFeatures['multi']) {
        unset($definitions['systempay_multi']);
    }

    if (! Tools::$pluginFeatures['paypal']) {
        unset($definitions['systempay_paypal']);
    }
}
